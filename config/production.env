# Production Environment Configuration

# Environment identifier
ENVIRONMENT=production

# Ollama Configuration
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=llama3.1:8b-instruct-q4_0

# Application Settings
APP_HOST=0.0.0.0
APP_PORT=7860
DEBUG=false
LOG_LEVEL=WARNING

# File Paths
FIELD_DICTIONARY_PATH=/app/data/orbis_field_names.c
RULES_OUTPUT_DIR=/app/output/rules
CUSTOM_FUNCTIONS_DIR=/app/output/functions

# Fuzzy Matching
FUZZY_THRESHOLD=80

# LLM Settings
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2048
LLM_TIMEOUT=300

# UI Settings
UI_THEME=soft
UI_SHARE=false

# Security
GRADIO_AUTH_USERNAME=admin
GRADIO_AUTH_PASSWORD=changeme
