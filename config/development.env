# Development Environment Configuration
# Copy to .env or set as environment variables

# Environment identifier
ENVIRONMENT=development

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b-instruct-q4_0

# Application Settings
APP_HOST=0.0.0.0
APP_PORT=7860
DEBUG=true
LOG_LEVEL=DEBUG

# File Paths
FIELD_DICTIONARY_PATH=./orbis_field_names.c
RULES_OUTPUT_DIR=./generated_rules
CUSTOM_FUNCTIONS_DIR=./custom_functions

# Fuzzy Matching
FUZZY_THRESHOLD=70

# LLM Settings
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048
LLM_TIMEOUT=120

# UI Settings
UI_THEME=soft
UI_SHARE=false
